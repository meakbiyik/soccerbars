{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format Code",
            "type": "shell",
            "command": "poetry run python -m black -t py38 .",
            "options": {
				"cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Python Tests",
            "type": "shell",
            "command": "poetry run coverage run --include scorebars/**  -m pytest && poetry run coverage xml --include scorebars/**",
            "options": {
				"cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run R Tests",
            "type": "shell",
            "command": "Rscript",
            "args":[
                "-e",
                "'devtools::test()'",
                "&&",
                "Rscript",
                "-e",
                {"value": "covr::to_cobertura(covr::package_coverage(), filename = 'cov.xml')", "quoting": "escape"},
                "&&",
                "sed",
                "-i",
                "'s/<sources\\/>/<sources><source>.<\\/source><\\/sources>/'",
                "cov.xml"
            ],
            "options": {
				"cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
    ]
}